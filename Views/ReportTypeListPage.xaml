<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppReports.ViewModels"
             x:Class="AppReports.Views.ReportTypeListPage"
             Title="Reportes"
             BackgroundColor="#FAFAFA"
             x:Name="RootPage">

    <ContentPage.BindingContext>
        <vm:ReportTypeListViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="20"
                Padding="16">
            <CollectionView ItemsSource="{Binding ReportTypes}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                            ItemSpacing="16"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="24"
                               BackgroundColor="White"
                               HasShadow="True"
                               Padding="0"
                               Margin="0,0,0,16">
                            <Grid Padding="22,18"
                                    ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="64"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Ícono -->
                                <Image Source="{Binding Icon}"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        VerticalOptions="Center"/>
                                <!-- Textos -->
                                <VerticalStackLayout Grid.Column="1"
                                        VerticalOptions="Center">
                                    <Label Text="{Binding Name}"
                                           FontAttributes="Bold"
                                           FontSize="20"
                                           TextColor="Black"/>
                                    <Label Text="{Binding Description}"
                                           FontSize="15"
                                           TextColor="#666"/>
                                </VerticalStackLayout>
                                <!-- Flecha -->
                                <Image Source="ic_chevron_right.png"
                                       Grid.Column="2"
                                       WidthRequest="28"
                                       HeightRequest="28"
                                       VerticalOptions="Center"/>
                            </Grid>
                            <!-- Comando de navegación -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding BindingContext.SelectReportTypeCommand, Source={x:Reference RootPage}}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
