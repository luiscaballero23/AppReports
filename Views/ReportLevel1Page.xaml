<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppReports.ViewModels"
             x:Class="AppReports.Views.ReportLevel1Page"
             Title="ReportLevel1Page">

    <ContentPage.BindingContext>
        <vm:ReportLevel1ViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="18">
            <!-- Encabezado general -->
            <Frame CornerRadius="10" Padding="12" BackgroundColor="#F7F7F7">
                <VerticalStackLayout Spacing="2">
                    <Label Text="{Binding Header.OriginalTitle}" FontAttributes="Bold"/>
                    <Label Text="{Binding Header.LocalTitle}"/>
                    <Label Text="{Binding Header.ReleaseDate, StringFormat='Release: {0}'}"/>
                    <Label Text="{Binding Header.Distributor}"/>
                    <Label Text="{Binding Header.Censorship}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista de detalles (exhibidores) -->
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>