<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppReports.ViewModels"
             x:Class="AppReports.Views.ReportLevel2Page"
             Title="ReportLevel2Page">
    
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <!-- Encabezado del Exhibidor -->
            <Grid BackgroundColor="#1E4E79" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Text="{Binding ExhibitorName}" FontAttributes="Bold" FontSize="18" TextColor="White" />
                <Label Grid.Column="1" Text="- Volver" FontAttributes="Bold" TextColor="White" />
            </Grid>

            <!-- Secciones de Multiplex -->
            <CollectionView ItemsSource="{Binding Multiplexes}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <!-- Encabezado Multiplex -->
                            <Grid BackgroundColor="#EF6C00" Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="White" />
                                <Label Grid.Column="1" Text="- Ver mÃ¡s" FontAttributes="Bold" TextColor="White" />
                            </Grid>

                            <!-- Detalle -->
                            <CollectionView ItemsSource="{Binding Columns}" SelectionMode="None">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8" BackgroundColor="White">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Label Text="{Binding ColumnHeader}" FontAttributes="Bold" Grid.Column="0" />
                                            <Label Text="{Binding Value}" Grid.Column="1" HorizontalOptions="End" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Totales -->
            <VerticalStackLayout>
                <Grid BackgroundColor="#EF6C00" Padding="10">
                    <Label Text="TOTAL" FontAttributes="Bold" FontSize="16" TextColor="White" />
                </Grid>
                <CollectionView ItemsSource="{Binding Totals}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8" BackgroundColor="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding ColumnHeader}" FontAttributes="Bold" Grid.Column="0" />
                                <Label Text="{Binding Value}" Grid.Column="1" HorizontalOptions="End" FontAttributes="Bold" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>