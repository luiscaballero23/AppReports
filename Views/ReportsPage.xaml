<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppReports.ViewModels"
             x:Class="AppReports.Views.ReportsPage"
             Title="Reports">
    <ContentPage.BindingContext>
        <vm:ReportsViewModel/>
    </ContentPage.BindingContext>
    <CollectionView ItemsSource="{Binding Reports}" x:Name="ReportsCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="8" Padding="8" BackgroundColor="White">
                    <VerticalStackLayout>
                        <Label Text="{Binding MovieName}" FontAttributes="Bold" FontSize="18"/>
                        <Label Text="{Binding City, StringFormat='City: {0}'}"/>
                        <Label Text="{Binding Date, StringFormat='Date: {0:yyyy-MM-dd}'}"/>
                        <Button Text="View Detail"
                                BackgroundColor="#3588F4"
                                TextColor="White"
                                Command="{Binding BindingContext.ShowDetailCommand, Source={x:Reference ReportsCollectionView}}"
                                CommandParameter="{Binding .}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>