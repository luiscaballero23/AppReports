<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppReports.Views.ReportsPage"
             Title="Reportes"
             BackgroundColor="White">
    <ContentPage.Resources>
        <Style x:Key="CardFrame" TargetType="Frame">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="BackgroundColor" Value="#F9F9F9" />
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </ContentPage.Resources>

    <CollectionView ItemsSource="{Binding Reports}" Margin="16,16,16,0">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding MovieName}" FontSize="18" FontAttributes="Bold" />
                        <Label Text="{Binding City}" FontSize="14" />
                        <Label Text="{Binding Room}" FontSize="14" />
                        <Label Text="{Binding Date, StringFormat='Fecha: {0:yyyy-MM-dd}'}" FontSize="14" />
                        <Label Text="{Binding BoxOffice, StringFormat='Taquilla: ${0:N0}'}" FontSize="14" />
                        <Label Text="{Binding Status}" FontSize="14"
                               TextColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>